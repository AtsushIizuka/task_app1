<h3>スケジュール新規作成</h3>
<%= render "shared/error", obj: @post %> 

<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :startdate ,"開始日" %></th>
      <td><%= f.date_field :startdate, value: Time.now.strftime("%Y-%m-%d"),min: Date.current %></td>
    
    </tr>

    <tr>
      <th><%= f.label :enddate ,"終了日" %></th>
      <td><%= f.date_field :enddate, value: Time.now.strftime("%Y-%m-%d"), min: Date.current%></td>
    </tr>

    <tr>
      <th><%= f.label :checkbox ,"終日" %></th>
      <td><%= f.check_box  :checkbox %></td>
    </tr>
    

  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>