<h3>スケジュール変更</h3>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :startdate ,"開始日" %></th>
      <td><%= f.date_field :startdate %> </td>
    </tr>

    <tr>
      <th><%= f.label :enddate ,"終了日" %></th>
      <td><%= f.date_field :enddate,min: Date.current %></td>
    </tr>

    <tr>
      <th><%= f.label :checkbox ,"終日" %></th>
      <td><%= f.check_box  :checkbox %></td>
    </tr>
    

  </table>

  <div>
    <ul>
      <li><%= f.submit "変更を完了する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>